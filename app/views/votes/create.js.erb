<% if @destroy %>
  $("#skill_dropzone").html("<%= escape_javascript(render('skills/dropzone', page: @page)) %>");
  initDropzone();
  tabsDropzone('top');
<% else %>
  $("#skill_dropzone .thumbnail#file_<%= @file.id %>").html("<%= escape_javascript(render('dropzone_files/file', media: @file, page: @page)) %>");
<% end %>