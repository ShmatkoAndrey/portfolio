#errors_login_out
#log_in
  = form_for(User.new, as: resource_name, url: session_path(resource_name), remote: true) do |f|
    .input-group
      %span.input-group-addon
        %i.glyphicon.glyphicon-user
      = f.email_field :email, class: 'form-control login_field', :placeholder => 'Email'
    .input-group
      %span.input-group-addon
        %i.glyphicon.glyphicon-lock
      = f.password_field :password, autocomplete: 'off', class: 'form-control login_field', :placeholder => 'Password'
    - if devise_mapping.rememberable?
      %label.checkbox-inline
        = f.check_box :remember_me
        = f.label :remember_me
    .actions
      = f.submit 'Log in', class: 'btn btn-default'
  %a{onClick: 'login_or_signup("signup")'}
    Sign up
  %br
  = render 'skills/devise/omniauth'

#sign_up{style: 'display: none;'}
  = form_for(User.new, as: resource_name, url: registration_path(resource_name), remote: true) do |f|
    .input-group
      %span.input-group-addon
        %i.glyphicon.glyphicon-user
      = f.email_field :email, class: 'form-control login_field', :placeholder => 'Email'
    .input-group
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} characters minimum)
      %span.input-group-addon
        %i.glyphicon.glyphicon-lock
      = f.password_field :password, autocomplete: 'off', class: 'form-control login_field', :placeholder => 'Password'
    .input-group
      %span.input-group-addon
        %i.glyphicon.glyphicon-lock
      = f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control login_field', :placeholder => 'Password confirmation'
    .actions
      = f.submit 'Sign up', class: 'btn btn-default'
  %a{onClick: 'login_or_signup("login")'}
    Back
  %br
  = render 'skills/devise/omniauth'


