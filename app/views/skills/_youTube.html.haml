.jumbotron
  .container
    = form_for Youtube.new, remote: true do |f|
      .form-group
        = f.text_field :link, class: 'form-control youtube_link'
        %br
        = f.submit '+ Add', class: 'btn btn-default'

- @videos = Youtube.all.reverse
- if @videos.any?
  .container
    %h1 Latest videos
    #player-wrapper
    - @videos.in_groups_of(3) do |group|
      .row
        - group.each do |video|
          - if video
            .col-md-4
              .yt_video.thumbnail
                = link_to image_tag("https://img.youtube.com/vi/#{video.uid}/mqdefault.jpg", alt: video.title, |
                            class: 'img-rounded'),                                                             |
                  "https://www.youtube.com/watch?v=#{video.uid}", target: '_blank'
                .caption
                  %h5= video.title
                  %p
                    Published at #{video.published_at.strftime('%-d %B %Y %H:%M:%S')}
                  %p
                    -#%span.glyphicon.glyphicon.glyphicon-thumbs-up
                    -#= video.likes
                    -#%span.glyphicon.glyphicon.glyphicon-thumbs-down
                    -#= video.dislikes